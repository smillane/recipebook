<h3>Edit Your Recipe</h3>
<div class="row">
    <form action="/recipes/{{recipe._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{recipe.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select recipe.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Share your recipe:</h5>
                <textarea id="body" name="body">{{recipe.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn yellow darken-2">
            <a href="/dashboard" class="btn grey darken-4">Cancel</a>
        </div>
    </form>
</div>